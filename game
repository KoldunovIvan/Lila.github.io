        function drawBoard() {
            function onClick(event) {
                const num = event.currentTarget.dataset.number;
                console.log("number:", num);
                }
                
           
            let blocks = Array.from(document.getElementsByClassName('block'));
            console.log(blocks);

            for (let i = 0; i < blocks.length; i++) {
                blocks[i].onclick = onClick;
            }
        }

        function random() {
            let num = Math.floor(Math.random() * 6);
            currentPosition += num;
            
            if (currentPosition === 8) {
                currentPosition = 7;
            } else if (currentPosition === 13) {
                currentPosition = 7;
            } else if (currentPosition === 20) {
                currentPosition = 7;
            } else if (currentPosition === 38) {
                currentPosition = 8;
            } else if (currentPosition === 52) {
                currentPosition = 26;
            } else if (currentPosition === 55) {
                currentPosition = 7;
            } else if (currentPosition === 57) {
                currentPosition = 6;
            } else if (currentPosition === 63) {
                currentPosition = 3;
            } else if (currentPosition === 72) {
                currentPosition = 42;
            }

            showCardSmall();
        }

        document.getElementById("button").onclick = random;
        
       function showCardSmall () {
            document.getElementById("card").innerHTML = renderSmallText();
            document.getElementById("button1").onclick = showCardBig;
       }
       function showCardBig () {
            document.getElementById("card").innerHTML = renderBigText();
            document.getElementById("button2").onclick = showCardSmall;
       }

        function renderSmallText() {
            return `<div class="card">
            <div class="card-body">
                <h5 class="card-title">${currentPosition}</h5>
                <h5 class="card-title">${titles[currentPosition]}</h5>
                <p class="card-sText">${sText[currentPosition]}</p>
                <button type="button" class="btn btn-dark" id="button1">Подробнее</button>
            </div>
        </div>`;
        
        }

        function renderBigText() {
            return `<div class="card">
            <div class="card-body">
                <h5 class="card-title">${currentPosition}</h5>
                <h5 class="card-title">${titles[currentPosition]}</h5>
                <p class="card-bText">${bText[currentPosition]}</p>
                <button type="button" class="btn btn-dark" id="button2">Свернуть</button>
                
            </div>
        </div>`;
      
    }   
    
drawBoard();

    </script>
</body>
